{
    "schemaVersion": "1.0.0",
    "actions": {
        "updateCaption": {
            "actionType": "JSFunction",
            "method": "populateFullScreenHeaderCaption",
            "inputData": {
                "headerTitle": "{{props.subPanelContext.headerTitle}}",
                "headerPath": "{{props.subPanelContext.headerPath}}",
                "headerContextTitle": "{{props.subPanelContext.headerContextTitle}}"
            },
            "outputData": {
                "caption": ""
            },
            "deps": "js/fullScreenService"
        }
    },
    "lifecycleHooks": {
        "onUpdate": {
            "action": "updateCaption",
            "observers": [ "props.subPanelContext.headerTitle", "props.subPanelContext.headerPath", "props.subPanelContext.headerContextTitle" ]
        }
    },
    "props": {
        "sub-panel-context": {
            "type": "object"
        }
    }
}
