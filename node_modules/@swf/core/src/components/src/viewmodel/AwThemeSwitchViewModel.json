{
    "schemaVersion": "1.0.0",
    "actions": {
        "render": {
            "method": "awThemeSwitchRenderFunction",
            "deps": "js/AwThemeSwitchService"
        },
        "updateTheme": {
            "actionType": "JSFunction",
            "method": "updateTheme",
            "inputData": {
                "theme": "{{ctx.theme}}"
            },
            "deps": "js/AwThemeSwitchService"
        }
    },
    "ctx": {
        "theme": null
    },
    "data": {},
    "conditions": {},
    "onEvent": [],
    "lifecycleHooks": {
        "render": "render",
        "onUpdate": {
            "action": "updateTheme",
            "observers": [ "viewModel.ctx.theme" ]
        }
    }
}
