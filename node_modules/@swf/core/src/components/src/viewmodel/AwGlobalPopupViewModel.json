{
    "schemaVersion": "1.0.0",
    "actions": {
        "render": {
            "method": "awGlobalPopupRenderFunction",
            "deps": "js/AwGlobalPopupService",
            "options": {
                "registerCtx": {
                    "key": "globalPopup",
                    "path": "actions.globalPopup"
                }
            }
        },
        "globalPopup": {
            "actionType": "popup",
            "inputData": {
                "options": {
                    "global": true,
                    "draggable": true
                }
            }
        }
    },
    "data": {},
    "conditions": {},
    "onEvent": [],
    "lifecycleHooks": {
        "render": "render"
    }
}
