{
    "schemaVersion": "1.0.0",
       "actions": {
        "render": {
            "method": "awSplitterRenderFunction",
            "deps": "js/AwSplitterService",
            "options": {
                "elementRefList": [ "splitter" ]
            }
        },
        "initialize": {
            "actionType": "JSFunction",
            "method": "initSplitter",
            "inputData": {
                "elementRefList": "{{parameters.elementRefList}}",
                "prop": "{{props}}",
                "viewMode": "{{ctx.ViewModeContext.ViewModeContext}}"
            },
            "deps": "js/awSplitterService"
        },
        "updateViewMode": {
            "actionType": "JSFunction",
            "method": "updateViewMode",
            "inputData": {
                "viewModeKey": "{{data.eventMap['appCtx.register'].value.ViewModeContext}}"
            },
            "outputData": {
                "viewMode": ""
            },
            "deps": "js/awSplitterService"
        }
    },
    "conditions": {},
    "onEvent": [
        {
            "eventId": "appCtx.register",
            "condition": "name === 'ViewModeContext' && value.ViewModeContext && value.ViewModeContext !== 'None'",
            "action": "updateViewMode",
            "cacheEventData": true
        }
    ],
    "lifecycleHooks": {
        "render": "render",
        "onMount": "initialize",
        "onUpdate": [
            {
                "action": "initialize",
                "observers": [ "viewModel.data.viewMode" ]
            }
        ]
    },
    "props": {
        "min-size-1": {
            "type": "string"
        },
        "min-size-2": {
            "type": "string"
        },
        "direction": {
            "type": "string"
        },
        "is-primary-splitter": {
            "type": "boolean"
        },
        "action": {
            "type": "action"
        }
    },
    "ctx": {
        "ViewModeContext.ViewModeContext": null
    }
}
